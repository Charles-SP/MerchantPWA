@model ApplicationModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron bg-dark pt-3 pb-3" style="border-radius: 0px;">
    <h6 class="font-weight-light" style="color:white;"><b>@Model.SubscribedProductName.ToUpper() - APPLICATION</b></h6>
</div>
<form action="AuthoriseApply" method="post">
    <fieldset>
        <label class="userInfo text-center font-weight-bold" style="margin-bottom:30px;">
            An SMS was sent to your mobile number: @Model.MobileNumber
            with the apply code required to proceed.
        </label>
        <!-- Text input-->
        <div class="form-group">
            <h6 class="userInfo text-center">
                <b class="text-center">
                    ENTER APPLY CODE
                </b>
            </h6>
            <div class="col-md-12">
                <input id="otp" name="otp" type="text" placeholder="Enter apply code received from SMS" class="form-control input-md userInfo" required="">

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <label>Not received notification?<a id="resend" onclick="resend();"> Resend Notification</a></label>
            </div>
            <div class="col-md-12">
                <label>My mobile number is incorrect.<a id="resend" onclick="goBack();"> Update Mobile Number</a></label>
            </div>
        </div>
    </fieldset>
    <div class="form-group text-center">
        <div class="col-md-12">
            <input type="submit" id="proceed" style="width: 100%; background-color: #212529;" value="PROCEED" class="btn btn-success btn-lg mt-2" />
        </div>
    </div>
</form>
<script>
    function resend() {
        location.reload();
    }

    function goBack() {
        window.history.back();
    }
</script>