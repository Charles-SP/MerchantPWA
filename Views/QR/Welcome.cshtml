@model ApplicationModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<form action="ProductInfo" method="post">
    <div class=" jumbo-color jumbotron hd pt-4 pb-3" style="border-radius: 0px; margin-bottom:0px !important; ">
        <h4 class="text-center" style="color:#EF6624; font-weight:500;"><b style="font-size:18px; color:#EF6624;">GET STARTED</b></h4>
    </div>
    <fieldset class="mt-4" style="width:100%">
        <div class="form-group text-center">
            <h6 class="userInfo text-center"><b class="text-center">PURCHASE AMOUNT</b></h6>
            <div class="col-md-12">
                <input id="amount" name="amount" type="number" step="any" placeholder="Enter The Product Amount" class=" input_Info form-control input-md" required>
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-md-12">
                <input type="submit" id="proceed" style=" width: 100%; background-color: #212529;" value="PROCEED" class=" btn btn-success btn-lg mt-2" />
            </div>
            <div class="col-md-12">
                <input type="submit" id="cancel" style="width: 100%;color: #212529;border-color: #f26522; border-width:2px; background-color:white;" value="CANCEL" class="btn btn-success btn-lg mt-2" />
            </div>
        </div>
    </fieldset>
</form>
